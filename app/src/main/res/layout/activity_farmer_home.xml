<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aswathy.myagriassist.FarmerHome"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/background">

    <LinearLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_margin="10dp"

            >
            <LinearLayout
                android:id="@+id/Agrimkt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/cardview_light_background">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/circlebackgroundpurple"
                    android:src="@drawable/ic_local_grocery_store_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AgriMarket"
                    android:gravity="center"
                    android:textColor="@color/deeppurple"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="you can purchase here"
                    android:gravity="center"
                    android:textColor="@color/deeppurple"
                    android:textStyle="bold"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <android.support.v7.widget.CardView
                android:layout_width="175dp"
                android:layout_height="170dp"
                android:layout_margin="10dp"

                >
                <LinearLayout
                    android:id="@+id/llweather"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/cardview_light_background">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/circlebackgroundgreen"
                        android:src="@drawable/ic_wb_sunny_black_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AgriWeather"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weather Information"
                        android:gravity="center"
                        android:textColor="@color/green"
                        android:textStyle="bold"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <android.support.v7.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_margin="10dp"

            >
            <LinearLayout
                android:id="@+id/AgriTut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/cardview_light_background">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/circlebackgroundpink"
                    android:src="@drawable/ic_photo_size_select_actual_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AgriTutorial"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="you can Learn here"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_margin="10dp"

            >
            <LinearLayout
                android:id="@+id/Agrires"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/cardview_light_background">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/circlebackgroundyellow"
                    android:src="@drawable/ic_email_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AgriResponse"
                    android:gravity="center"
                    android:textColor="@color/yellow"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Complaints or Feedback"
                    android:gravity="center"
                    android:textColor="@color/yellow"
                    android:textStyle="bold"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/out"
        android:background="@color/yellow"
        android:textColor="@color/lightgrey"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="100dp"
        android:text="LOG OUT"
         />
</LinearLayout>

